{
  "name": "Spotify-Wrapper",
  "version": "1.0.0",
  "description": "A wrapper to work with the Spotify Web API",
  "main": "index.js",
  "scripts": {
    "lint": "./node_modules/.bin/eslint src/*.js",
    "prepush": "npm run test:coverage",
    "test": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register",
    "test:tdd": "./node_modules/.bin/mocha tests/**/*.spec.js --require babel-register --watch",
    "test:coverage": "nyc npm test"
  },
  "nyc": {
    "functions": 10,
    "lines": 10,
    "check-coverage": true,
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martins-wescley/Spotify-Wrapper.git"
  },
  "author": "Wescley Martins <wescleymartins02@gmail.com> (https://github.com/WescleyMartins1988)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/martins-wescley/Spotify-Wrapper/issues"
  },
  "homepage": "https://github.com/martins-wescley/Spotify-Wrapper#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "eslint": "^4.15.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "mocha": "^5.1.1",
    "node-fetch": "^2.1.2",
    "nyc": "^11.8.0",
    "sinon": "^2.1.0",
    "sinon-chai": "^3.0.0",
    "sinon-stub-promise": "^4.0.0"
  },
  "dependencies": {
    "@babel/node": "^7.0.0-beta.47",
    "update-node": "^0.1.0"
  }
}
